DECLARE
tabela_existente int:=0;
BEGIN
  SELECT count(*) into tabela_existente FROM all_tables where table_name = 'REP_ASSISTENTES_UNIT'; 

  if tabela_existente<=0 then
     EXECUTE IMMEDIATE 'CREATE TABLE REP_ASSISTENTES_UNIT (
		ID					NUMBER(19,0)     NOT NULL,        
		ATIVO               NUMBER(1),
        ID_PESSOA           NUMBER(19,0)     NOT NULL,		
		CRIADO_POR		    VARCHAR2(255 CHAR) NOT NULL,
		DATA_CRIACAO		TIMESTAMP NOT NULL,
		MODIFICADO_POR		VARCHAR2(255 CHAR) NOT NULL,
		DATA_ALTERACAO		TIMESTAMP NOT NULL,
		DELETADO		    NUMBER(1) NOT NULL)';
     	EXECUTE IMMEDIATE 'ALTER TABLE REP_ASSISTENTES_UNIT ADD CONSTRAINT KRS_INDICE_12293 PRIMARY KEY ( ID )';    
  end if;
END;
/
COMMENT ON TABLE SERVICE_COMPANY_DEV.REP_ASSISTENTES_UNIT  IS 'CORE_DEV:SERVICE_UNIT_DEV:ASSISTENTES:id';
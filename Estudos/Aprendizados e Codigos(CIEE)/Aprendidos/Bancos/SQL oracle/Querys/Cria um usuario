INSERT INTO USUARIOS
(ID,CRIADO_POR,DATA_CRIACAO,DELETADO,MODIFICADO_POR,DATA_ALTERACAO,CODIGO,EMAIL,NOME,SENHA,TIPO_USUARIO,ID_PERFIL)
VALUES
(SEQ_USUARIOS.nextval,'Sun Millie Borim',CURRENT_TIMESTAMP,'0','Sun Millie Borim',CURRENT_TIMESTAMP,'Sun','pedro.fernandes@ciee.org.br',
'SUN É SUN N *****','12345','BACKOFFICE',
(SELECT ID
FROM PERFIS
WHERE DESCRICAO = 'Backoffice Operação'));
INSERT INTO LOGINS
(ID, ID_USER, LOGIN, TIPO, DATA_CRIACAO, DELETADO, DATA_ALTERACAO)
(SELECT SEQ_LOGINS.NEXTVAL, ID ,CODIGO, 'KAIROS', DATA_CRIACAO, DELETADO, DATA_ALTERACAO from USUARIOS Where CODIGO = 'Sun');
INSERT INTO usuarios_dominios
(id_usuario,
id_dominio)
VALUES ((SELECT id
FROM usuarios
WHERE email = 'pedro.fernandes@ciee.org.br'),
(SELECT id
FROM dominios
WHERE descricao = 'Unidade CIEE - SP'
AND rownum = 1));